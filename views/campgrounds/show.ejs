<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= campground.image %>" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-secondary">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">
                        $<%= campground.price %>/night
                    </li>
                </ul>
                <div class="class-body">
                    <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info mt-3 mb-3 ml-3">Edit
                        Campground</a>
                    <form action="/campgrounds/<%= campground._id %>/delete?_method=DELETE" class="d-inline">
                        <button class="btn btn-danger">Delete Campground</button>
                    </form>
                </div>
            </div>
        </div>
    </div>









